@if (TempData["success"] != null)
{
    <script>

        $.toast({
            heading: 'Success',
            text: [
                '@TempData["success"]'
            ],
            icon: 'success',
            hideAfter: 5000,
            position: 'top-right',
        });
    </script>
   
}

